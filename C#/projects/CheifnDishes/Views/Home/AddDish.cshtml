@model Dish

<div class="container">
    <div class="text-center">
        <h1>Add a Dish!</h1>
        <a href="/">Home</a>
    </div>
    <div class="form-group">
        <form asp-action="CreateDish" asp-controller="Home" method="POST">
            <label asp-for="DishName"></label>
            <span class="text-danger" asp-validation-for="DishName"></span>
            <input class="form-control" asp-for="DishName">
            
            <label asp-for="ChefId"></label>
            <span class="text-danger" asp-validation-for="ChefId"></span>
            <select class="form-control" asp-for="ChefId" >
                @foreach (var item in ViewBag.Chefs)
                {
                    <option value="@item.ChefId">@item.FirstName @item.LastName</option>
                }
                
            </select>
            <br>
            <label asp-for="TasteRating"></label>
            <span class="text-danger" asp-validation-for="TasteRating"></span>
            <select class="form-control" asp-for="TasteRating" >
                
                {
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                }
                
            </select>
            <br>
            <label asp-for="Description"></label>
            <span class="text-danger" asp-validation-for="Description"></span>
           <textarea class="form-control" asp-for="Description" cols="30" rows="10"></textarea>
            <label asp-for="Calories"></label>
            <span class="text-danger" asp-validation-for="Calories"></span>
            <input class="form-control" asp-for="Calories">
            <input type="submit">
            </form>
    </div>
</div>